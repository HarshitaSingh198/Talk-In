<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edt_background2"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/txt_receive_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/this_is_receive_message"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/received_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:25 PM"
                android:textColor="@color/white"
                android:layout_alignBottom="@id/txt_receive_message"
                android:layout_toEndOf="@id/txt_receive_message"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"/>
        </RelativeLayout>


</RelativeLayout>
